# Configuration Application DispoDialyse pour GitHub Codespaces
APP_NAME="DispoDialyse"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Configuration Maintenance
APP_MAINTENANCE_DRIVER=file

# Configuration Base de Données SQLite (optimisée pour Codespaces)
DB_CONNECTION=sqlite
# DB_DATABASE sera automatiquement database/database.sqlite

# Configuration Sessions
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Configuration Broadcasting (désactivé en Codespaces)
BROADCAST_CONNECTION=log

# Configuration Cache
CACHE_STORE=file
CACHE_PREFIX=

# Configuration Queue
QUEUE_CONNECTION=sync

# Configuration Système de Fichiers
FILESYSTEM_DISK=local

# Configuration Email (mode log pour développement)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@dispodialyse.fr"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuration Laravel Reverb (désactivé en Codespaces)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

# Configuration Services Externes
VITE_APP_NAME="${APP_NAME}"

# Configuration Sécurité
FORCE_HTTPS=false

# Configuration 2FA
MFA_ENABLED=false

# Configuration RGPD
AUDIT_LOG_RETENTION_DAYS=730

# Configuration SSO Active Directory (désactivé)
LDAP_ENABLED=false

# Configuration Backup Automatique (désactivé en développement)
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=30

# Configuration Rate Limiting
API_RATE_LIMIT=60

# Configuration Vite (pour GitHub Codespaces)
VITE_DEV_SERVER_URL=http://localhost:5173