# Configuration Application
APP_NAME="DispoDialyse"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Configuration Maintenance
APP_MAINTENANCE_DRIVER=file

# Configuration Base de Données (Docker)
# Types supportés: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=dispodialyse
DB_USERNAME=sail
DB_PASSWORD=password

# Configuration Sessions
# Drivers: file, cookie, database, apc, memcached, redis, dynamodb, array
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Configuration Broadcasting (Temps Réel)
BROADCAST_CONNECTION=reverb

# Configuration Cache (Docker Redis)
# Drivers: apc, array, database, file, memcached, redis, dynamodb, octane, null
CACHE_STORE=redis
CACHE_PREFIX=

# Configuration Queue (Docker Redis)
# Connections: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=redis

# Configuration Redis (Docker)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration Système de Fichiers
# Drivers: local, ftp, sftp, s3
FILESYSTEM_DISK=local

# Configuration Email
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@dispodialyse.fr"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration Logs
# Channels: stack, single, daily, slack, syslog, errorlog, monolog, custom
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuration Laravel Reverb (WebSocket)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

# Alternative: Pusher pour WebSocket hébergé
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

# Configuration Services Externes
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Configuration Sécurité
# Forcer HTTPS en production
FORCE_HTTPS=false

# Configuration 2FA
MFA_ENABLED=true

# Configuration RGPD
# Durée de rétention des logs d'audit (en jours)
AUDIT_LOG_RETENTION_DAYS=730

# Configuration SSO Active Directory (Optionnel)
LDAP_ENABLED=false
LDAP_HOST=
LDAP_PORT=389
LDAP_BASE_DN=
LDAP_USERNAME=
LDAP_PASSWORD=

# Configuration Backup Automatique
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Configuration Rate Limiting (Limite requêtes API)
API_RATE_LIMIT=60
